@page "/todo"
@using Playground.Wasm.Shared.Models.Todos




<MudDataGrid Items="@dataList"
             RowsPerPage="5"
             Loading="dataLoading"
             ShowMenuIcon="true"
             Filterable="true"
             Hideable="true">
    <Columns>
        <PropertyColumn Property="x => x.Id" />
        <PropertyColumn Property="x => x.Description" />
        <PropertyColumn Property="x => x.Done" />
        <PropertyColumn Property="x => x.DoneDate" />
    </Columns>
    <ToolBarContent>
        <MudIconButton Icon="@Icons.Material.Filled.Refresh" OnClick="LoadData" />
    </ToolBarContent>
    <PagerContent>
        <MudDataGridPager T="TodoDto" />
    </PagerContent>
</MudDataGrid>
